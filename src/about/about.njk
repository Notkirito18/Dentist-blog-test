<section id="doctors" class="ftco-section">
  <div class="container">
    <div class="row justify-content-center mb-5 pb-5">
      <div class="col-md-7 text-center heading-section ftco-animate">
        <h2 class="mb-3">Meet Our Experienced Dentists</h2>
        <p>
          Our skilled team combines advanced training and compassionate care to
          create healthy, confident smiles.
        </p>
      </div>
    </div>
    <div class="row">
      {% for dentist in collections.dentists %}
      <div class="col-lg-3 col-md-6 d-flex mb-sm-4 ftco-animate">
        <div class="staff">
          <div
            class="img mb-4"
            style="background-image: url('{{ dentist.data.thumbnail }}')"></div>
          <div class="info text-center">
            <h3>
              <a href="/">{{ dentist.data.title }}</a>
            </h3>
            <span class="position">{{ dentist.data.position }}</span>
            <div class="text">
              <p>
                {{ dentist.data.description }}
              </p>
              <ul class="ftco-social">
                <li class="ftco-animate">
                  <a href="#"><i class="fa-solid fa-envelope"></i></a>
                </li>
                <li class="ftco-animate">
                  <a href="#"><i class="fa-solid fa-phone"></i></a>
                </li>
                <li class="ftco-animate">
                  <a href="#"><i class="fa-brands fa-linkedin"></i></a>
                </li>
              </ul>
            </div>
          </div>
        </div>
      </div>
      {% endfor %}
    </div>
  </div>
</section>

