<section class="ftco-section contact-section ftco-degree-bg">
  <div class="container">
    <div class="row block-9">
      <div class="col-md-6 pr-md-5">
        <div class="heading-section">
          <h2 class="mb-4">Send a message now</h2>
        </div>
        <form
          id="contact-form"
          action="https://formsubmit.co/djallel123456@gmail.com"
          method="POST">
          <div class="form-group">
            <input
              type="text"
              name="name"
              class="form-control"
              id="name-contact-input"
              placeholder="Full Name" />
            <div id="name-contact-error" class="error-msg"></div>
          </div>
          <div class="form-group">
            <input
              type="text"
              name="email"
              class="form-control"
              id="email-contact-input"
              placeholder="Email" />
            <div id="email-contact-error" class="error-msg"></div>
          </div>
          <div class="form-group">
            <input
              type="text"
              name="subject"
              class="form-control"
              id="subject-contact-input"
              placeholder="Subject" />
            <div id="subject-contact-error" class="error-msg"></div>
          </div>
          <div class="form-group">
            <textarea
              name="message"
              id="message-contact-input"
              class="form-control"
              cols="30"
              rows="3"
              placeholder="Message"></textarea>
            <div id="message-contact-error" class="error-msg"></div>
          </div>
          <div class="form-group d-flex justify-content-end">
            <button
              type="button"
              id="contact-submit-btn"
              class="btn contact-msg-btn">
              Send Message
            </button>
          </div>
          <input
            type="hidden"
            name="_subject"
            value="From Dentist website - Contact form !" />
          <input type="hidden" name="_captcha" value="false" />
        </form>
      </div>

      <div class="col-md-6 contact-info">
        <div class="heading-section">
          <h2 class="mb-4">Where to find us</h2>
        </div>
        <p>
          <span>Address:</span>
