<!-- Modal for Appointment Request -->
<section class="ftco-intro">
  <div class="container">
    <div class="row no-gutters">
      <div class="col-md-3 color-1 p-4">
        <h3 class="mb-4">Emergency Cases</h3>
        <p>
          We provide 24/7 emergency dental care for sudden tooth pain, injuries,
          and infections.
        </p>
        <span class="phone-number">+2 392 3929 210</span>
      </div>
      <div class="col-md-3 color-2 p-4">
        <h3 class="mb-4">Opening Hours</h3>
        <p class="openinghours d-flex">
          <span>Monday - Friday</span>
          <span>8:00 - 19:00</span>
        </p>
        <p class="openinghours d-flex">
          <span>Saturday</span>
          <span>10:00 - 14:00</span>
        </p>
        <p class="openinghours d-flex">
          <span>Sunday</span>
          <span>10:00 - 16:00</span>
        </p>
      </div>
      <div class="col-md-6 color-3 p-4">
        <h3 class="mb-2">Make an Appointment</h3>
        <form
          id="appointment-form-hero"
          action="https://formsubmit.co/djallel123456@gmail.com"
          method="POST"
          class="appointment-form">
          <div class="row">
            <div class="col-sm-4">
              <div class="form-group">
                <div class="icon">
                  <i class="fa-solid fa-user"></i>
                </div>
                <input
                  type="text"
                  name="name"
                  class="form-control"
                  id="name-hero-input"
                  placeholder="Name" />
              </div>
              <div id="name-hero-error" class="error-msg"></div>
            </div>
            <div class="col-sm-4">
              <div class="form-group">
                <div class="icon">
                  <i class="fa-solid fa-envelope"></i>
                </div>
                <input
                  type="text"
                  name="email"
                  class="form-control"
                  id="email-hero-input"
                  placeholder="Email" />
              </div>
              <div id="email-hero-error" class="error-msg"></div>
            </div>
            <div class="col-sm-4">
              <div class="form-group">
                <div class="icon">
                  <i class="fa-solid fa-phone-flip"></i>
                </div>
                <input
                  type="text"
                  name="phone"
                  class="form-control"
                  id="phone-hero-input"
                  placeholder="Phone Number" />
              </div>
              <div id="phone-hero-error" class="error-msg"></div>
            </div>
          </div>
          <div class="row">
            <div class="col-sm-4">
              <div class="form-group">
                <div class="select-wrap">
                  <div class="icon">
                    <i class="fa-solid fa-arrow-down"></i>
                  </div>
                  <select
                    class="form-control"
                    name="service"
                    id="service-hero-input">
                    <option value="none" disabled selected>
                      Select service
                    </option>
                    <option value="Check-Up & Cleaning">
                      Check-Up & Cleaning
                    </option>
                    <option value="Tooth Extraction">Tooth Extraction</option>
                    <option value="Fillings / Cavities Treatment">
                      Fillings / Cavities Treatment
                    </option>
                    <option value="Braces / Clear Aligners">
                      Braces / Clear Aligners
                    </option>
                    <option value="Root Canal Treatment">
                      Root Canal Treatment
                    </option>
                    <option value="Other / Not Sure">Other / Not Sure</option>
                  </select>
                </div>
              </div>
            </div>
            <div class="col-sm-4">
              <div class="form-group">
                <input
                  type="date"
                  name="date"
                  id="date-hero-input"
                  class="form-control appointment_date"
                  placeholder="Date"
                  style="padding-right: 0" />
              </div>
              <div id="date-hero-error" class="error-msg"></div>
            </div>
            <div class="col-sm-4">
              <div class="form-group">
                <input
                  type="time"
                  name="time"
                  id="time-hero-input"
                  class="form-control"
                  placeholder="Time" />
              </div>
              <div id="time-hero-error" class="error-msg"></div>
            </div>
          </div>

          <div class="d-flex justify-content-end">
            <button
              id="appointment-hero-submit-btn"
              type="button"
              class="btn hero-appointment-btn">
              Make an Appointment
            </button>
          </div>
          <input
            type="hidden"
            name="_subject"
            value="From Dentist website - Appointment form !" />
          <input type="hidden" name="_captcha" value="false" />
        </form>
      </div>
    </div>
  </div>
</section>
<!-- Services Section -->
<section class="ftco-section ftco-services">
  <div class="container">
    <div class="row justify-content-center mb-5 pb-5">
      <div class="col-md-7 text-center heading-section ftco-animate">
        <h2 class="mb-2">Our Service Keeps you Smile</h2>
        <p>
          Our comprehensive dental services combine expert skills with gentle
          care to keep your smile healthy every day.
        </p>
      </div>
    </div>
    <div class="row">
      {% for service in collections.homeServices %}
      <div class="col-md-3 d-flex align-self-stretch ftco-animate">
        <a
          href="{{ service.url }}"
          class="text-decoration-none text-reset w-100">
          <div class="media block-6 services d-block text-center">
            <div class="icon d-flex justify-content-center align-items-center">
              <img
                src="{{ service.data.thumbnail }}"
                alt="{{ service.data.title }}"
                class="img-fluid" />
            </div>
            <div class="media-body p-2 mt-3">
              <h3 class="heading">{{ service.data.title }}</h3>
              <p class="service-description">
                {{ service.data.description }}
              </p>
            </div>
          </div>
        </a>
      </div>
      {% endfor %}
    </div>
    <p
      class="services-link"
      data-scrollax="properties: { translateY: '30%', opacity: 1.6 }">
      <a href="/services/" class="btn btn-primary px-4 py-3"
        >Check all our services <i class="fa-solid fa-arrow-right"></i>
