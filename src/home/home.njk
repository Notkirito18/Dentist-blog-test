<!-- Latest Blog Section -->
<section class="ftco-section">
  <div class="container">
    <div class="row justify-content-center mb-5 pb-3">
      <div class="col-md-7 text-center heading-section ftco-animate">
        <h2 class="mb-2">Latest Blog</h2>
        <p>
          Explore our expert articles on oral health, treatment breakthroughs,
          and patient success stories for informed care.
        </p>
      </div>
    </div>
    <div class="row">
      {% for post in collections.latestPosts %}
      <div class="col-md-4 ftco-animate">
        <div class="blog-entry">
          {% set imageUrl = post.data.thumbnail or '/images/image_1.webp' %}
          <a
            href="{{ post.url }}"
            class="block-20"
            style="background-image: url('{{ imageUrl }}')">
          </a>
          <div class="py-4">
            <h3 class="blog-title">
              <a href="{{ post.url }}">{{ post.data.title }}</a>
            </h3>
            <div class="mb-3">
              <div class="blog-info">
                {{ post.date | date("MMMM d, yyyy") }}
              </div>
              <div class="blog-info">{{ post.data.author }}</div>
            </div>
          </div>
        </div>
      </div>
      {% else %}
      <div class="col-12 text-center">
        <p class="text-center">No blog posts yet.</p>
      </div>
      {% endfor %}
    </div>
  </div>
</section>
